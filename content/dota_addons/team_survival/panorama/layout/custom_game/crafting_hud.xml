<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/crafting_hud.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/crafting_hud.js" />
	</scripts>
	<Panel class="container">
		<!-- Item crafting HUD-->
		<Panel class="craftingContainer" id="itemCrafting">
			<!-- Item Axe-->
			<Button class="craftingButton" id="item_axe" onactivate="OnButtonPressed('item_axe')">
				<Image src="file://{images}/craft_item_axe.png" />
				<Label class="craftingButtonLabel" text="Build axe." />
			</Button>
			<!-- Item Spear-->
			<Button class="craftingButton" id="item_spear" onactivate="OnButtonPressed('item_spear')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build spear." />
			</Button>
		</Panel>
		<!-- Building crafting HUD-->
		<Panel class="craftingContainer" id="buildingCrafting">
			<!-- Building Wall-->
			<Button class="craftingButton" id="building_wall" onactivate="OnButtonPressed('wall')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build Wall." />
			</Button>
			<!-- Building Tower-->
			<Button class="craftingButton" id="building_tower" onactivate="OnButtonPressed('tower')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build Tower." />
			</Button>
		</Panel>
		<!-- Potion crafting HUD-->
		<Panel class="craftingContainer" id="potionCrafting">
			<!-- Potion Health pot-->
			<Button class="craftingButton" id="potion_health" onactivate="OnButtonPressed('health')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Craft health pot." />
			</Button>
			<!-- Potion Mana pot-->
			<Button class="craftingButton" id="potion_mana" onactivate="OnButtonPressed('mana')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Craft mana pot." />
			</Button>
		</Panel>
	</Panel>
</root>
