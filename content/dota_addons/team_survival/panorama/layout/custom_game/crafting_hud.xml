<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/crafting_hud.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/crafting_hud.js" />
	</scripts>
	<Panel class="container">
		<!-- Item crafting HUD-->
		<Panel class="craftingContainer" id="itemCrafting">
			<!-- Item Wooden Hammer -->
			<Button class="craftingButton" id="item_team_survival_wooden_hammer" onactivate="OnButtonPressed('item_team_survival_wooden_hammer')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build wooden hammer." />
			</Button>
			<!-- Item Wooden Axe -->
			<Button class="craftingButton" id="item_team_survival_wooden_axe" onactivate="OnButtonPressed('item_team_survival_wooden_axe')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build wooden axe." />
			</Button>

			<!-- Item Wooden Sword -->
			<Button class="craftingButton" id="item_team_survival_wooden_sword" onactivate="OnButtonPressed('item_team_survival_wooden_sword')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build wooden sword." />
			</Button>
			<!-- Item Stone Hammer -->
			<Button class="craftingButton" id="item_team_survival_stone_hammer" onactivate="OnButtonPressed('item_team_survival_stone_hammer')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build stone hammer." />
			</Button>
			<!-- Item Stone Axe -->
			<Button class="craftingButton" id="item_team_survival_stone_axe" onactivate="OnButtonPressed('item_team_survival_stone_axe')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build stone axe." />
			</Button>
			<!-- Item Stone Sword -->
			<Button class="craftingButton" id="item_team_survival_stone_sword" onactivate="OnButtonPressed('item_team_survival_stone_sword')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build stone sword." />
			</Button>
		</Panel>
		<!-- Building crafting HUD-->
		<Panel class="craftingContainer" id="buildingCrafting">
			<!-- Building Campfire-->
			<Button class="craftingButton" id="item_team_survival_building_campfire" onactivate="OnButtonPressed('item_team_survival_building_campfire')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build Campfire." />
			</Button>
			<!-- Building Wall-->
			<Button class="craftingButton" id="building_wall" onactivate="OnButtonPressed('wall')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build Wall." />
			</Button>
			<!-- Building Tower-->
			<Button class="craftingButton" id="building_tower" onactivate="OnButtonPressed('tower')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Build Tower." />
			</Button>
		</Panel>
		<!-- Potion crafting HUD-->
		<Panel class="craftingContainer" id="potionCrafting">
			<!-- Potion Health pot-->
			<Button class="craftingButton" id="potion_health" onactivate="OnButtonPressed('health')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Craft health pot." />
			</Button>
			<!-- Potion Mana pot-->
			<Button class="craftingButton" id="potion_mana" onactivate="OnButtonPressed('mana')">
				<!-- <Image src="file://{images}/craft_item_axe.png" /> -->
				<Label class="craftingButtonLabel" text="Craft mana pot." />
			</Button>
		</Panel>
	</Panel>
</root>
